<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
      <th>Content</th>
      <th>Uploaded_by</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <%= link_to 'New Picture', new_picture_path %>
    <% @pictures.each do |picture| %>
      <tr>
        <td>●</td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) if current_user == picture.user%></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } if current_user == picture.user%></td>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
        <td><%= picture.image %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
