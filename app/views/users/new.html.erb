<h1>Sign up</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved: </h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
<%= f.label :name %>
<%= f.text_field :name, class: "black_letter" %>
<%= f.label :email %>
<%= f.email_field :email, class: "black_letter" %><br>
<%= f.label :password %>
<%= f.password_field :password, class: "black_letter" %>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, class: "black_letter" %><br>
<%= f.submit "Create my account", class: "black_letter" %>
<% end %>
